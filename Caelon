private void LogEntry()
{
    string log = $"Shimmer entered at: {System.DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")}";
    Debug.Log(log);

    PlayerPrefs.SetString("LastShimmerEntry", log);  // Stores for local session data
}
